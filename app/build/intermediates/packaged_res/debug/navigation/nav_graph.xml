<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="home">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.betterto_do.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_newDestinationFragment"
            app:destination="@id/newDestinationFragment" />
    </fragment>

    <fragment
        android:id="@+id/newDestinationFragment"
        android:name="com.example.betterto_do.NewDestinationFragment"
        tools:layout="@layout/fragment_new_destination">
        <argument
            android:name="itemID"
            app:argType="string"
            android:defaultValue="default_value" />
    </fragment>

    <!-- Add more fragments and actions as needed for your app's screens -->
</navigation>
